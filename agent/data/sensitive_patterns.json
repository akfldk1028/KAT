        {
          "required": ["name", "resident_id", "medical_history"],
          "result_risk": "CRITICAL",
          "reason": "완전한 의료신원 노출"
        },
        {
          "required": ["name", "disability"],
          "result_risk": "HIGH",
          "reason": "장애정보 노출로 차별 위험"
        }
      ]
