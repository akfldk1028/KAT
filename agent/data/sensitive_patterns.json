        {
          "id": "medical_history",
          "name_ko": "과거/현재 질병, 수술, 진료 기록",
          "name_en": "Medical History",
          "risk_level": "HIGH",
          "regex": null,
          "keywords": ["병력", "수술", "진료", "질병", "암", "당뇨", "고혈압"],
