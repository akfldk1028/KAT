  "combination_rules": {
    "identity_theft": {
      "name_ko": "신원도용 위험",
      "description": "신원을 도용하여 대출, 휴대폰 개통 등에 악용 가능",
      "patterns": [
        {
          "required": ["name", "resident_id"],
          "result_risk": "CRITICAL",
          "reason": "이름과 주민번호 조합으로 신원도용 가능"
        },
        {
          "required": ["name", "resident_id", "phone"],
          "result_risk": "CRITICAL",
          "reason": "본인인증 3요소(이름+주민번호+전화번호) 노출"
        },
        {
          "required": ["name", "passport"],
          "result_risk": "CRITICAL",
          "reason": "여권정보로 해외 신원도용 가능"
        },
        {
          "required": ["name", "birth_date", "resident_id"],
          "result_risk": "CRITICAL",
          "reason": "신원확인 세트 완전 노출"
        }
      ]
    },
    "financial_fraud": {
      "name_ko": "금융사기 위험",
      "description": "보이스피싱, 금융사기에 악용 가능",
      "patterns": [
        {
          "required": ["name", "account"],
          "result_risk": "HIGH",
          "reason": "금융사기 타겟팅 가능"
        },
        {
          "required": ["name", "account", "phone"],
          "result_risk": "CRITICAL",
          "reason": "보이스피싱 완벽 타겟 (이름+계좌+전화번호)"
        },
        {
          "required": ["account", "card"],
          "result_risk": "CRITICAL",
          "reason": "금융정보 세트 노출"
        },
        {
          "required": ["name", "card"],
          "result_risk": "HIGH",
          "reason": "카드 부정사용 위험"
        }
      ]
    },
    "stalking_risk": {
      "name_ko": "스토킹/추적 위험",
      "description": "물리적 위치 추적 및 스토킹에 악용 가능",
      "patterns": [
        {
          "required": ["name", "address"],
          "result_risk": "HIGH",
          "reason": "물리적 위치 노출"
        },
        {
          "required": ["name", "phone", "address"],
          "result_risk": "CRITICAL",
          "reason": "완전한 연락처 정보 노출"
        },
        {
          "required": ["name", "apartment_unit"],
          "result_risk": "HIGH",
          "reason": "거주지 정보 노출"
        },
        {
          "required": ["name", "apartment_unit", "vehicle_registration"],
          "result_risk": "CRITICAL",
          "reason": "생활패턴 추적 가능"
        }
      ]
    },
    "account_takeover": {
      "name_ko": "계정탈취 위험",
      "description": "온라인 계정 탈취에 악용 가능",
      "patterns": [
        {
          "required": ["password"],
          "any_of": ["name", "phone", "email"],
          "result_risk": "CRITICAL",
          "reason": "계정 탈취 가능한 인증정보 조합"
        },
        {
          "required": ["email", "password"],
          "result_risk": "CRITICAL",
          "reason": "이메일+비밀번호 크리덴셜 노출"
        },
        {
          "required": ["api_key"],
          "result_risk": "CRITICAL",
          "reason": "API 키 단독 노출도 치명적"
        }
      ]
    },
    "spam_targeting": {
      "name_ko": "스팸/피싱 타겟 위험",
      "description": "스팸, 피싱 메일 타겟팅에 악용 가능",
      "patterns": [
        {
          "required": ["email", "name"],
          "result_risk": "MEDIUM",
          "reason": "이메일+이름으로 표적 피싱 가능"
        },
        {
          "required": ["email", "phone"],
          "result_risk": "MEDIUM",
          "reason": "다중 채널 스팸 타겟팅 가능"
        }
      ]
    },
    "medical_privacy": {
      "name_ko": "의료정보 악용 위험",
      "description": "차별, 협박, 보험사기 등에 악용 가능",
